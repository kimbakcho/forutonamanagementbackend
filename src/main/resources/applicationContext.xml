<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="AppdataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"></property>
        <property name="url" value="jdbc:log4jdbc:mysql://forutonadb.thkomeet.com:3306/forutona?useSSL=true&amp;verifyServerCertificate=false">
        </property>
        <property name="username" value="neoforutona"></property>
        <property name="password" value="neoforutona1020"></property>
    </bean>

    <bean id="AppsqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="AppdataSource"></property>
        <property name="configLocation" value="classpath:/mybatis-config.xml"></property>
        <property name="mapperLocations" value="classpath:FcubeMapper/**/*Mapper.xml"></property>
    </bean>


    <bean id="AppsqlSession" class="org.mybatis.spring.SqlSessionTemplate"
          destroy-method="clearCache">
        <constructor-arg name="sqlSessionFactory" ref="AppsqlSessionFactory"></constructor-arg>
    </bean>

    <bean id="ApptransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <constructor-arg ref="AppdataSource" />
    </bean>

    <bean id="WebdataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"></property>
        <property name="url" value="jdbc:log4jdbc:mysql://forutonadb.thkomeet.com:3306/managementdb?useSSL=true&amp;verifyServerCertificate=false">
        </property>
        <property name="username" value="managementforutona"></property>
        <property name="password" value="forutona1020"></property>
    </bean>

    <bean id="WebsqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="WebdataSource"></property>
        <property name="configLocation" value="classpath:/mybatis-config.xml"></property>
        <property name="mapperLocations" value="classpath:Mappers/**/*Mapper.xml"></property>
    </bean>


    <bean id="WebsqlSession" class="org.mybatis.spring.SqlSessionTemplate"
          destroy-method="clearCache">
        <constructor-arg name="sqlSessionFactory" ref="WebsqlSessionFactory"></constructor-arg>
    </bean>

    <bean id="WebtransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <constructor-arg ref="WebdataSource" />
    </bean>

</beans>